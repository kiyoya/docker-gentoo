#!/bin/sh

set -e

NAME="${NAME:-gentoo}"
IMAGE="${IMAGE:-kiyoya/gentoo}"
TAG="${TAG:-latest}"

MY_UID="${MY_UID:-$(id -u)}"
MY_GID="${MY_GID:-$(id -g)}"
MY_USER="${MY_USER:-$(whoami)}"
MY_HOME="${MY_HOME:-${HOME}}"

function job_enter() {
  docker exec -i -t "${NAME}" /bin/bash
}

function job_prepare() {
  docker pull "${IMAGE}:${TAG}"
}

function job_start() {
  docker run -d -i -t \
    --name "${NAME}" \
    --net=host \
    -e "MY_UID=${MY_UID}" \
    -e "MY_GID=${MY_GID}" \
    -e "MY_USER=${MY_USER}" \
    -e "MY_HOME=${MY_HOME}" \
    -v "${MY_HOME}/.screen" \
    -v "${MY_HOME}:${MY_HOME}" \
    "${IMAGE}:${TAG}"
}

function job_stop() {
  docker kill "${NAME}"
  docker rm "${NAME}"
}

case "${1}" in
enter)
  job_enter
  ;;
prepare)
  job_prepare
  ;;
restart)
  job_stop
  job_start
  ;;
start)
  job_start
  ;;
stop)
  job_stop
  ;;
*)
  echo "usage: $0 [ enter | prepare | restart | start | stop ]"
esac
